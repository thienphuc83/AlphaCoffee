<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgtintuc"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/custom_bg_item_img" />



        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tvtentintuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Tên tin tức"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvnoidungtintuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="12 Lê Duẫn, Quận 1, TP Hồ Chí Minh"
                android:textColor="@color/colorBlack"
                android:textSize="10sp" />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnchitiettintuc"
                android:background="@drawable/custom_click_btn_change_pass"
                android:layout_gravity="right"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Chi tiết"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>