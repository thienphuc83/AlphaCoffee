<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme4"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.ProductDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imgcloseproductdetail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/imgproductdetail"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_border_img"
                    android:padding="5dp"
                    android:src="@drawable/example" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/tvtenproductdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="2"
                    android:maxWidth="200dp"
                    android:maxLines="2"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvgiaproductdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:text="200000"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutlikeandcongtrusoluong"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/imglikeproductdetail"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_heart" />
                    <info.hoang8f.widget.FButton
                        android:id="@+id/btntruproductdetail"
                        android:layout_marginLeft="50dp"
                        android:padding="5dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tvsoluongproductdetail"
                        android:textColor="@color/colorBlack"
                        android:text="2"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />

                    <info.hoang8f.widget.FButton
                        android:id="@+id/btncongproductdetail"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <RadioGroup
                    android:id="@+id/radiobuttonsizeproductdetail"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/rbsizelonproductdetail"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorBlack"
                        android:text="Lớn"
                        android:textSize="15sp"
                        android:layout_height="40dp"/>
                    <RadioButton
                        android:id="@+id/rbsizevuaproductdetail"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorBlack"
                        android:text="Vừa"
                        android:textSize="15sp"
                        android:layout_height="40dp"/>
                    <RadioButton
                        android:id="@+id/rbsizenhoproductdetail"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorBlack"
                        android:text="Nhỏ"
                        android:textSize="15sp"
                        android:layout_height="40dp"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvgiasizelonproductdetail"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="+10000 đ"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/tvgiasizevuaproductdetail"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="+10000 đ"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/tvgiasizenhoproductdetail"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="+10000 đ"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topping"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgchecktopping"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_check"/>
                <TextView
                    android:id="@+id/tvtoppingproductdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Thêm trân châu"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/imgchecktopping"/>
                <TextView
                    android:id="@+id/tvgiatoppingproductdetail"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="+ 10000 đ"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:padding="15dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvmotaproductdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ahdkj"
                    android:maxLines="7"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    />
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layouttongtienproductdetail"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/colorTheme">

        <TextView
            android:id="@+id/tvtongtienproductdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="200000 đ"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>


    </LinearLayout>
</LinearLayout>